{
  "stylelint.enable": true,    
  "editor.codeActionsOnSave": {     
    "source.fixAll.eslint": true,   
    "source.fixAll.stylelint": true    
  },
  "stylelint.validate": [
    "css",
    "less",
    "postcss",
    "scss",
    "vue",
    "sass"
  ],
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "vue"
  ]
}